<div class="card text-center">
  <div class="card-body">
    <h5 class="card-title">Đăng kí tài khoản của bạn</h5>
    <form action="/register" method="POST">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Tên đăng nhập</label>
            <div class="col-sm-10">
            <input name="user_name" type="text" class="form-control" id="inputEmail3" placeholder="Nhập vào Email hoặc User Name bạn muốn">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
            <input name="pass_word" type="password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="full_name" class="col-sm-2 col-form-label">Nhập vào đầy đủ họ tên của bạn</label>
            <div class="col-sm-10">
            <input name="full_name" type="text" class="form-control" id="full_name" placeholder="Tạ Tuấn Huy">
            </div>
        </div>
        <div class="form-group row">
            <label for="user_id" class="col-sm-2 col-form-label">User ID</label>
            <div class="col-sm-10">
            <input name="user_id" type="text" class="form-control" id="user_id" placeholder="Nhập vào mã người dùng mà bạn muốn">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
            <button type="submit" class="btn btn-primary mt-4">Đăng kí</button>
            <div class="mt-2">
                <a href="http://localhost:3000/login" class="text-success">Bạn đã có tài khoản? Đăng nhập ngay</a>
            </div>
            </div>
        </div>
    </form>
  </div>
</div>